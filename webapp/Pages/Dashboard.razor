<div class="top-row px-4" style="padding: 30px">
    <div class="top-row ps-3 navbar navbar-dark custom-navbar" style="border: 1px solid #ffffff; border-radius: 5px;">
        <div class="container-fluid d-flex justify-content-between">
            <a class="navbar-brand text-black d-flex align-items-center" href="">
                <span style="font-size: 1.25rem; color: white; font-weight: bold;">MADKISTEN</span>
            </a>

            <div class="d-flex align-items-center">
                <button class="btn-eaa" style="width: 150px; background-color: #3a646dff; color: white; border-radius: 5px; font-size: 1rem; border: none" @onclick="HandleLogout">Log ud</button>
