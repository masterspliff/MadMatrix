@page "/"
<h3 class="text-center my-4">Login</h3>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <h4 class="text-center mb-4">Please Login</h4>
        <form>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" id="email" class="form-control" placeholder="Enter your email" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" placeholder="Enter your password" />
            </div>
            <button type="button" class="btn btn-primary w-100" onclick="login()">Login</button>
        </form>
        <p class="text-center mt-3">Don't have an account? <a href="/register" class="text-primary">Sign Up</a></p>
    </div>
</div>

