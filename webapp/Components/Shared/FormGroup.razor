<div class="form-group mb-3">
    <label for="@Id">@Label</label>
    @ChildContent
</div>

@code {
    [Parameter, EditorRequired]
    public string Id { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public string Label { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = null!;
}
